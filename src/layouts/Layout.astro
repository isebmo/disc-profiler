---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Test DISC — Découvre ton profil comportemental',
  description = 'Découvre ton profil DISC en 3 minutes. Test gratuit, sans inscription, avec résultats détaillés et conseils personnalisés.',
} = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700;1,9..40,400&family=Outfit:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      const theme = localStorage.getItem('disc-theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      if (theme === 'dark' || (!theme && prefersDark)) {
        document.documentElement.classList.add('dark');
      }
    </script>
    <script defer src="https://stat.tfada.fr/script.js" data-website-id="b6217a47-509e-47fe-9af8-84b258e5a79b"></script>
  </head>
  <body class="bg-white dark:bg-[#202124]">
    <!-- Blob Background -->
    <div class="bg-blobs">
      <div class="bg-blob bg-blob--d"></div>
      <div class="bg-blob bg-blob--i"></div>
      <div class="bg-blob bg-blob--s"></div>
      <div class="bg-blob bg-blob--c"></div>
    </div>

    <slot />
  </body>
</html>
